# Generic aliases
alias ll='ls -alF --color'
alias la='ls -A --color'
alias l='ls -CF --color'
alias ...='cd ../..'
alias lc='wc -l'

alias zedit='sudo vim ~/.zshrc'
alias zrefresh='source ~/.zshrc'
alias vedit='vim ~/.vimrc'
alias aedit='vim ~/.aliases'
alias arefresh='source ~/.aliases'
alias acat='cat ~/.aliases'
alias tedit='vim ~/.tmux.conf'

# Remaps
alias python='/usr/bin/python3'
alias bat='batcat'
alias v='vim'

# Windows aliases
alias win='cd /mnt/c/Users/BTWASI'

# Git aliases
alias gs='git status'
alias ga='git add'
alias gb='git branch'
alias gaa='git add -A'
alias gl='git log'
alias gr='git rm'
alias gra='git rm -A'
alias gbd='git branch -D'
alias gpsh='git push'
alias gpsho='git push origin'
alias gp='git pull'
alias grecent="git branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:short)%(color:reset))'"
alias gch='git checkout '
alias gc='git commit -m'
alias gm='git merge'
alias lg='lazygit'

